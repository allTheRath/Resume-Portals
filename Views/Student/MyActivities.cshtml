@model IEnumerable<Resume_Portal.Models.Activity>
<span>
    @Html.ActionLink("Add new Activity", "AddActivity")
</span>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Discription)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                <img src="@item.ImageUrl" class="profilepic" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityType)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteActivity", new { id = item.Id })
            </td>
        </tr>
    }

</table>
