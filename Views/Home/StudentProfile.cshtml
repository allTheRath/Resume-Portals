@model Resume_Portal.Models.CompleteStudentInfo
@Styles.Render("~/Content/Site.css")
    <section>
        <img class="profile-pic" src="@Model.ProfilePicUrl" />
    </section>
<main>

    <div class="push-top">
        <span>
            @Html.DisplayFor(modelItem => modelItem.SortDiscription)
        </span>
        <span>
            @Html.DisplayFor(modelItem => modelItem.ProfessionalEmail)
        </span>
        <span>
            @Html.ActionLink("Request Resume", "RequestResume", "Home", new { id = Model.StudentId })
        </span>
    </div>
    <section class="section_content">

        <div class="profile-flex">

            <div id="flex-ele" class="main_content">
                <div>
                    <h4>
                        @Html.DisplayFor(modelItem => modelItem.MyName)
                    </h4>
                    <h4>
                        @Html.DisplayFor(modelItem => modelItem.OccupationName)
                    </h4>
                </div>
                <span class="span_img">
                    @Html.DisplayFor(modelItem => modelItem.AboutMe)
                </span>
                <span>
                    @Html.DisplayFor(modelItem => modelItem.ContactInfo)
                </span>
                <span>
                    <p>
                        I am Currently in @Html.DisplayFor(modelItem => modelItem.SemesterNumber)
                    </p>
                    <p>
                        Program will end on @Html.DisplayFor(modelItem => modelItem.EndDate)
                    </p>
                </span>
            </div>
            @{
                Html.RenderAction("ViewSkills", new { id = Model.ProfileId });
            }
            <div>
                <h4>
                    Education
                </h4>
            </div>
            @{
                Html.RenderAction("ViewEducation", new { id = Model.ProfileId });
            }
            <div>
                <h4>
                    Experience
                </h4>
            </div>
            @{
                Html.RenderAction("ViewExperience", new { id = Model.ProfileId });
            }
            <div>
                <h4>
                    Past Activities
                </h4>
            </div>
            @{
                Html.RenderAction("ViewActivities", new { id = Model.ProfileId });
            }
        </div>
    </section>
</main>

<style>


    .img {
        width: 20vw;
    }

    h5 {
        color: forestgreen;
    }

    .push-top {
        margin-top: 17%;
        /* margin-left: 100px; */
        text-align: end;
        font-size: 100px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        width: 100%;
        color: #00a88d;
        font-size: 20px;
        font-weight: lighter;
        letter-spacing: .06em;
        margin-bottom: .5em;
    }
</style>

<style>
    .main-flex {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        width: 100%;
        justify-content: space-evenly;
        align-items: center;
        font-family: 'Roboto', sans-serif;
        font-weight: 300;
    }

    #flex-ele {
        display: flex;
        flex-direction: column;
        flex-wrap: nowrap;
        width: 40%;
        justify-content: space-evenly;
    }

    .img-container {
        margin-right: 7px;
        display: inline;
    }

    .img {
        float: left;
        margin-right: 4%;
        border-radius: 70%;
        overflow: hidden;
        display: inline;
        /*max-width: 100%;

            overflow: hidden;
            position: relative;*/
        width: 100%;
    }

    .second {
        float: left;
        width: 40%;
        display: inline;
        margin-top: 2em;
    }

    .name {
        color: #00a88d;
        font-size: 20px;
        font-weight: bold;
        letter-spacing: .06em;
        margin-bottom: .5em;
        display: inline;
    }

    .discription {
        margin-bottom: 1em;
        text-align: start;
        width: 200px;
        display: inline;
    }

    .button {
        position: relative;
        /*padding: 9px 30px 8px 20px;*/
        border: none;
        border-width: 2px;
        border-color: #bbd876;
        border-style: solid;
        border-width: 0 0 0 2px;
        letter-spacing: .05em;
        overflow: hidden;
        transition: border-color .2s;
        z-index: 0;
        text-align: center;
        font-size: 1.8vw;
        background-color: beige;
        color: forestgreen;
        display: inline;
    }

    .profile-pic {
        width: 50% !important;
        padding-left:10%;
    }
</style>
