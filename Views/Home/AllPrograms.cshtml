<main class="main-flex">
    @foreach (var item in Model)
    {
        <section class="flex-ele">
            <div class="img-container">
                <img class="img" src="~/program-images/@item.Name/pic/logo.jpg" />
            </div>
            <div class="second">
                <h3 class="name">
                    @Html.DisplayFor(modelItem => item.Name)
                </h3>
                <p class="discription">
                    @Html.DisplayFor(modelItem => item.Discription)
                </p>
                <button class="button">
                    @Html.ActionLink("Program Details", "ProgramDetails", new { id = item.Id })
                </button>
                <button class="button">
                    @Html.ActionLink("All Students", "StudentInProgram", new { id = item.Id })
                </button>
            </div>
        </section>
    }
</main>

