@model IEnumerable<Resume_Portal.Models.Program>
<span>Program Name</span>
<input type="text" id="search" name="ser" />
<main class="main-flex">
    @foreach (var item in Model)
    {
        <a href=@("#"+@item.Name.ToString())><hr /></a>
        <section class=@(@item.Name.ToString()) id="flex-ele">
            <div class="img-container">
                <img class="img" src="~/program-images/@item.Name/pic/logo.jpg" />
            </div>
            <div class="second">
                <h3 class="name">
                    @Html.DisplayFor(modelItem => item.Name)
                </h3>
                <p class="discription">
                    @Html.DisplayFor(modelItem => item.Discription)
                </p>
                <button class="button">
                    @Html.ActionLink("Program Details", "ProgramDetails", new { id = item.Id })
                </button>
                <button class="button">
                    @Html.ActionLink("All Students", "StudentInProgram", new { id = item.Id })
                </button>
            </div>
        </section>
    }
</main>
<p class="appendChild">
</p>
<script>
    var n = document.querySelector("#search");
    n.addEventListener("change", function (e) {
        var x = document.querySelector("#search").value;
        console.log(x);
        var allPosibles = document.querySelectorAll("#flex-ele");
        if (allPosibles != undefined) {
            for (i = allPosibles.length - 1; i >= 0; i--) {
                if (allPosibles[i].className.includes(x)) {
                    console.log(allPosibles[i].className);
                    var nodeSelect = document.querySelector("." + allPosibles[i].className.toString());
                    nodeSelect.scrollIntoView();
                    break;
                }
            }
        }
    });

</script>
<style>
    .main-flex {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        width: 100%;
        justify-content: space-evenly;
        align-items: center;
        font-family: 'Roboto', sans-serif;
        font-weight: 300;
    }

    #flex-ele {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-evenly;
    }

    .img-container {
        margin-right: 7px;
        display: inline;
    }

    .img {
        float: left;
        margin-right: 4%;
        border-radius: 70%;
        overflow: hidden;
        display: inline;
        /*max-width: 100%;

        overflow: hidden;
        position: relative;*/
        width: 100%;
    }

    .second {
        float: left;
        width: 40%;
        display: inline;
        margin-top: 2em;
    }

    .name {
        color: #00a88d;
        font-size: 20px;
        font-weight: bold;
        letter-spacing: .06em;
        margin-bottom: .5em;
        display: inline;
    }

    .discription {
        margin-bottom: 1em;
        text-align: start;
        width: 200px;
        display: inline;
    }

    .button {
        position: relative;
        /*padding: 9px 30px 8px 20px;*/
        border: none;
        border-width: 2px;
        border-color: #bbd876;
        border-style: solid;
        border-width: 0 0 0 2px;
        letter-spacing: .05em;
        overflow: hidden;
        transition: border-color .2s;
        z-index: 0;
        text-align: center;
        font-size: 1.8vw;
        background-color: beige;
        color: forestgreen;
        display: inline;
    }
</style>